<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_alarm_screen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_company_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:gravity="center"
        android:text="ChargingWatts \nBattery Alarm "
        android:textColor="@color/colorPrimaryUltraLight"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_alarm_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bell_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_company_product_name"
        app:layout_constraintBottom_toTopOf="@id/tv_alarm_msg"/>

    <TextView
        android:id="@+id/tv_alarm_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Alarm is ringing"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_32dp"/>
    <TextView
        android:id="@+id/tv_stop_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Remove charger to stop Alarm! \n Or \n Press Here !"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="@dimen/text_size_22sp"
        android:textStyle="bold"
        android:padding="@dimen/dimen_24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>